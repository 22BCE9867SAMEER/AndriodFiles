<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"

    tools:context=".yclass.Mediaplayer.MediaplayerActivity">


    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MEDIA PLAYER AND AUDIO FILES "
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="231dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/music" />

    <SeekBar
        android:id="@+id/seekBarid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/imagepause"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_margin="5dp"

            app:srcCompat="@drawable/baseline_pause_circle_24" />


        <ImageButton
            android:id="@+id/imageButtonplay"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_margin="5dp"

            app:srcCompat="@drawable/baseline_play_circle_24" />


        <ImageButton
            android:id="@+id/imageButtonstop"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_margin="5dp"

            app:srcCompat="@drawable/baseline_stop_circle_24" />
    </LinearLayout>


</LinearLayout>