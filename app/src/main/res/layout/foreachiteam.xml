<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        android:id="@+id/cardviewmovie"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imagemusic"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/vijay4"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/imagetext"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="HELLO"
                android:textSize="25sp"
                android:gravity="center"
                android:layout_gravity="center" />

            <ImageButton
                android:id="@+id/imageButtonmovieplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="25dp"
                app:srcCompat="@drawable/baseline_play_circle_24" />

            <ImageButton
                android:id="@+id/imageButtonmoviestop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/baseline_stop_circle_24" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
