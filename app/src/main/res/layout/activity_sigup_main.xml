<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/sigin"
    tools:context=".SigupMainActivity">

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"

        android:textSize="20dp"
        android:textColor="#10E119"
        android:textColorHint="#10E119"
        android:layout_margin="20dp"
        android:drawableStart="@drawable/baseline_person_24"

        android:inputType="text"
        android:hint="Enter your name" />

    <EditText
        android:id="@+id/usermail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="20dp"
        android:inputType="text"
        android:textColor="#10E119"
        android:textColorHint="#10E119"
        android:layout_margin="20dp"
        android:drawableStart="@drawable/baseline_email_24"

        android:hint="Enter your mail" />

    <EditText
        android:id="@+id/userpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="20dp"
        android:textColor="#10E119"
        android:textColorHint="#10E119"
        android:layout_margin="20dp"
        android:drawableStart="@drawable/baseline_lock_24"

        android:inputType="textPassword"
        android:hint="enter pasword" />

    <Button
        android:id="@+id/usersigupbutton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:backgroundTint="#C4CA2A"
        android:text="sigup" />
</LinearLayout>